<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.UserProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E8E7E7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="15dp"
            android:background="#F8635A"
            android:elevation="20dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/emailProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:clickable="false"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|left"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="TextView"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/birthdayProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_baseline_date_range_24"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|left"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="TextView"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/genderProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_gender"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|left"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="TextView"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phoneNumberProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_baseline_phone_android_24"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|left"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="TextView"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dateProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_baseline_date_range_24"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|left"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="TextView"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/numberOfAnimesProfile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawableStart="@drawable/ic_baseline_format_list_numbered_rtl_24"
            android:background="#FFFFFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="center|left"
            android:shadowDx="1"
            android:shadowDy="1"
            android:text="TextView"
            android:textSize="15sp"
            android:elevation="5dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signOutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF7F7F"
            android:layout_marginTop="12dp"
            android:text="Sign Out"
            app:cornerRadius="4dp" />

    </LinearLayout>
</FrameLayout>